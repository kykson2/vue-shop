{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/vue3-recommended",
        "plugin:vue/vue3-strongly-recommended",
        "airbnb-base",
        "plugin:prettier/recommended",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "avoid", // 화살표 함수 괄호 사용 방식
                "bracketSpacing": true, // 객체 리터럴의 괄호 사이에 공백 출력
                "endOfLine": "auto", // 개행문자 CRLF/LF 자동 설정
                "printWidth": 80, // 줄바꿈 길이 설정
                "semi": true, // 명령문 끝에 세미콜론 추가
                "singleQuote": false, // 작은 따옴표 사용
                "tabWidth": 2, // 들여쓰기 공백 수 설정
                "trailingComma": "all", // 후행 쉼표 추가
                "useTabs": false // tab 대신 space 사용
            }
        ],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never",
                "tsx": "never",
                "vue": "never"
            }
        ],
        "import/no-unresolved": [
            "error",
            {
                "caseSensitive": false
            }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx",
                    ".json",
                    ".vue",
                    ".css"
                ],
                "moduleDirectory": [
                    "node_modules",
                    "src"
                ]
            },
            "typescript": {}
        }
    }
}